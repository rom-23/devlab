{% extends 'base.html.twig' %}
{% block title %}Home{% endblock %}
{% block body %}

    <header>
        <div class="maintitle">
            <h2>Web-Dev Projects</h2>
            <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention
                tofeatured content or information.</p>
        </div>
    </header>
    <div class="mainback">
        <div class="row">
            <div class="col-md-3">
                <div class="container sidebar">
                    <h2>Modern Business Features</h2>
                    <p>The Modern Business template by Start Bootstrap includes:</p>
                    <form class="form-inline">
                        <input class="form-control mr-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn" type="submit">Search</button>

                    </form>
                    {#                    {% if json is defined %}{{ json }}{% endif %}#}
                </div>

                <div class="mainproject">

                    {% for project in projects %}
                        <project-details project-name="{{ project.projectName }}">
                            <a class="displayData" href="{{ path('home.search',{id:project.id}) }}"
                               slot="links">{{ project.projectName }}</a>
                            <div slot="description" class="suite"></div>
                            <div slot="attributes" class="secondsuite"></div>
                        </project-details>
                    {% endfor %}
                </div>
                <div class="container mt-5">
                    <project-card>
                        <a class="allProject btn btn-primary" href="{{ path('project') }}" slot="button">open
                            database</a>
                    </project-card>
                </div>
            </div>
            <div class="col-md-9">
                <div class="row">
                    <div class="container pb-4">
                        <cc-countdown duration="3" purpose="Timer 1"></cc-countdown>
                        <cc-countdown duration="180" purpose="Timer 2"></cc-countdown>
                    </div>

                    {% for category in categories %}
                        <div class="col-md-3 col-sm-6">
                            <div class="card">
                                <div class="card-body  text-center">
                                    <h4 class="card-title">{{ category.categoryName }}</h4>
                                    <img class="img-thumbnail" src="{{ asset('images/empty.jpg') }}" alt="">
                                    <p class="card-text text-center">{{ category.categoryDesc }}</p>
                                </div>
                                <div class="container mb-3 text-center">
                                    <a href="#" class="btn">Read more</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <div class="pagination mt-3">
                    {{ knp_pagination_render(categories) }}
                </div>
            </div>
        </div>
    </div>


{% endblock %}
