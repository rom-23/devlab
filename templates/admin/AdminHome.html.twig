{% extends 'base.html.twig' %}
{% block title %}Hello AdminController!{% endblock %}
{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <h1 class="navbar-brand">Admin </h1>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="admin">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Edition</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Update</a>
                </li>
            </ul>
            <span class="navbar-text"><a href="/" class="btn btn-success"> Go to Front-end</a></span>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="mainback">
            <div class="row">
                <div class="col-md-3">
                    <div class="container">
                        <p>Web component 2</p>
                        <project-card>
                            <a class="allProject btn btn-primary" name="projects" slot="button">open
                                database</a>
                        </project-card>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mainproject">
                        <p>Web component 1</p>
                        {% for project in projects %}
                            <project-details>
                                <a class="displayData" href="#" name="projects/{{ project.id }}"
                                   slot="links">{{ project.projectName }}</a>
                                <div slot="description" class="suite"></div>
                                <div slot="attributes" class="secondsuite"></div>
                            </project-details>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="container">
                    <p>List of categories</p>
                    <div class="row">
                        {% for category in categories %}
                            <div class="col-md-3 col-sm-6">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h4 class="card-title">{{ category.categoryName }}</h4>
                                        <img class="img-thumbnail" src="{{ asset('images/empty.jpg') }}" alt="">
                                        <p class="card-text text-center">{{ category.categoryDesc }}</p>
                                    </div>
                                    <div class="container mb-3 text-center">
                                        <a href="#" class="btn">Read more</a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="pagination mt-3">
                        {{ knp_pagination_render(categories) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
